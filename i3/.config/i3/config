# =========================
#  ULTIMATE i3 CONFIG
# =========================

# --- Core ---
set $mod Mod1
font pango:JetBrainsMono Nerd Font 11

# Merge Xresources for cursor/theme
exec --no-startup-id xrdb -merge ~/.Xresources

# --- Apps & Startup ---
set $term kitty

# Display setup
exec_always --no-startup-id ~/.screenlayout/defaultsetup.sh

# Wallpaper (delay ensures background loads after startup)
exec_always --no-startup-id sh -c "sleep 2 && feh --no-fehbg --bg-fill \"$HOME/Pictures/image3.png\""

# Compositor (Picom)
exec_always --no-startup-id sh -c 'pkill -x picom >/dev/null 2>&1 || true; /usr/bin/picom --config "$HOME/.config/picom/picom.conf"'

# Ulauncher (app launcher)
exec --no-startup-id ulauncher --hide-window
bindsym $mod+space exec --no-startup-id ulauncher-toggle

# --- Window Behavior ---
focus_follows_mouse no
mouse_warping none
workspace_auto_back_and_forth yes

# Borders & gaps
new_window pixel 3
new_float none
gaps inner 0
gaps outer 0

# Exceptions
for_window [class="Ulauncher"] border none

# --- Colors ---
# Format: client.<state> <border> <background> <text> <indicator>
client.focused          #00bfff #00bfff #000000 #00bfff
client.focused_inactive #333333 #5f676a #ffffff #484e50
client.unfocused        #333333 #222222 #888888 #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

# --- Keybindings ---
## Apps
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+Shift+r restart

## Focus (hjkl)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

## Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Alternative split keys (no conflicts)
# beside (horizontal)
bindsym $mod+i split h  
# stacked (vertical)
bindsym $mod+u split v

## Workspaces 1â€“5
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5

## Resize mode (hjkl)
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow   height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow   width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# --- System Keys ---
## Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -d intel_backlight set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -d intel_backlight set 10%-

## Volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

## Media
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# --- Input devices ---
exec --no-startup-id xinput set-prop "ELAN06FA:00 04F3:3280 Touchpad" "libinput Tapping Enabled" 1
exec --no-startup-id xinput set-prop "ELAN06FA:00 04F3:3280 Touchpad" "libinput Accel Speed" 0.3

# --- Screenshots ---
bindsym $mod+Shift+s exec flameshot gui

# --- Bar ---
## Toggle bar with Win+0
bindsym Mod4+0 bar mode toggle

bar {
    status_command i3blocks
    position top
    height 32
    tray_output none
    separator_symbol " "
    font pango:Iosevka Nerd Font 12

    mode hide
    hidden_state hide
    modifier Mod4

    colors {
        background #1d1f21
        statusline #ffffff
        separator  #666666

        focused_workspace  #ffffff #000000 #ffffff
        active_workspace   #aaaaaa #000000 #aaaaaa
        inactive_workspace #666666 #000000 #666666
        urgent_workspace   #ff0000 #000000 #ff0000
    }
}
